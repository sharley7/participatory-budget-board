<div class="row">
<div class="col-sm-8 col-sm-offset-2 white-bg">

<section>
  <h2>Create your proposal</h2>
  <hr class="single-line" />
  <% unless locals.empty? %>
  <%= message %>
<% end %>
<form method="POST" action="/proposals">
<p><label>Title</label><br /><input type="text" name="title" id="title" placeholder="Give your proposal a title" size="36"/></p>
<p><label>Your proposal</label> <br /><textarea name="content" id="content" rows="4" cols="35" placeholder="I propose...." /></textarea></p>
<p><label>Select the neighborhood</label>
    <br />
     <select name="neighborhood_id">
      <% Neighborhood.all.each do |neighborhood| %>
          <option id="neighborhood_<%=neighborhood.id%>" value="<%=neighborhood.id%>" > <%=neighborhood.name%></option>
         <% end %>
      </select>
    </p>



  <input type="hidden" value="<%=session[:user_id]%>" name="user_id">

<p>
<input type="submit" value="Submit" />
</form></p>
</section>

</div>
</div>
