<div class="row">
<div class="col-sm-8 col-sm-offset-2 white-bg">

<section>
  <div class="row">
    <div class="col-sm-12">

<h2>Sign Up</h2>
<hr class="single-line" />
<% unless locals.empty? %>
   <h5><%= message %></h5>
<% end %>
<form method="POST" action="/signup">
<p><label>Username</label><br /><input type="text" name="username" id="username" /></p>
<p><label>E-mail</label><br /><input type="email" name="email" id="email" /></p>
<p><label>Password</label><br /><input type="password" name="password" id="password" /></p>
    <p><label>Select your neighborhood:</label>
        <br />
         <select name="neighborhood_id">
          <% Neighborhood.all.each do |neighborhood| %>
              <option id="neighborhood_<%=neighborhood.id%>" value="<%=neighborhood.id%>" > <%=neighborhood.name%></option>
             <% end %>
          </select>
        </p>

<p>
<input type="submit"  value="Sign Up" />
</form></p>


</div>
</div>

</section>

</div>
</div>
